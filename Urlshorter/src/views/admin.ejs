<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge"> 
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <title>Document</title>
</head>
<body>
  <nav class="navbar navbar-expand-lg bg-light">
    <div class="container-fluid">
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-8 mb-g-10">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/login/logout">Logout</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login/getchange">
              Change Password</a>
          </li>
        </ul>
    </div>
  </nav>
  <div class="container">
    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th>User</th>
          <th></th>
          <th></th>
          <th>status</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% listuser.forEach(user => { %>
          <tr>
            <td><%= user.username %></td>
            <td><a></a></td>
            <td><a><%= user.active %></a></td>
            <td>
                <form action="/admin/Disable" method="POST">
                  <input type="hidden" id="_id" name="_id"class="form-control"  value="<%= user.username %>" />
                  <button type="submit" class="btn btn-primary">Deactivate</button>
                </form>
           </td>

           <td>
            <form action="/admin/Active" method="POST">
              <input type="hidden" id="_id" name="_id"class="form-control"  value="<%= user.username %>" />
              <button type="submit" class="btn btn-primary">Activate</button>
            </form>
           </td>

            <td>
                <form action="/admin/logoutuser" method="POST">
                  <input type="hidden" id="username" name="username"class="form-control"  value="<%= user.username %>" />
                  <button type="submit" class="btn btn-primary">Log out</button>
                </form>
           </td>
        <% }) %>
        <thead>
          <tr>
            <th>Full URL</th>
            <th>Short URL</th>
            <th>Clicks</th>
            <th>Username</th>
            <th>Date Create</th>
  
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(shortUrl => { %>
            <tr>
              <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
              <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
              <td><%= shortUrl.clicks %></td>
              <td><a><%= shortUrl.username %></a></td>
              <td><a><%= shortUrl.CreateAt %></a></td>
              <td>
                        <form action="/admin/deletebyadmin" method="POST">
                          <input type="hidden" id="_id" name="_id"class="form-control"  value="<%= shortUrl._id %>" />
                          <button type="submit" class="btn btn-primary">Delete</button>
                        </form>
             </td>
          <% }) %>
      </tbody>
    </table>
  </div>
  </div>
</body>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
